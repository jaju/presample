<h1>Listing pins</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User description</th>
      <th>Link url</th>
      <th>Body</th>
      <th>User</th>
      <th>Board</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.title %></td>
        <td><%= pin.user_description %></td>
        <td><%= pin.link_url %></td>
        <td><%= pin.body %></td>
        <td><%= pin.user %></td>
        <td><%= pin.board %></td>
        <td><%= link_to 'Show', pin %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pin', new_pin_path %>
