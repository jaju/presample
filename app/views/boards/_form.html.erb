<%= form_for @board, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :purpose_text, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :purpose_text, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :visibility, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :visibility, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :deleted, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :deleted, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  boards_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
