<%= simple_form_for(@pin) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :user_description %>
    <%= f.input :link_url %>
    <%= f.input :body %>
    <%= f.association :user %>
    <%= f.association :board %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
